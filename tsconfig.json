{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "~/*": ["./src/*"],
      "@lib/*": ["src/lib/*"],
      "@utils/*": ["src/utils/*"],
      "@components/*": ["src/components/*"],
      "@styles/*": ["src/styles/*"],
      "@payload-types": ["src/payloads-types.ts"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false
  },
  "include": ["**/*", ".eslintrc.cjs"]
}
