{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "moduleResolution": "Node16",
    "target": "ES2022",
    "module": "Node16",
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "stripInternal": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "~/*": ["./src/*"],
      "@lib/*": ["src/lib/*"],
      "@utils/*": ["src/utils/*"],
      "@components/*": ["src/components/*"],
      "@styles/*": ["src/styles/*"],
    },
    "esModuleInterop": true,
    "allowJs": true,
  },
  "include": ["**/*", "eslint.config.js"]
}
