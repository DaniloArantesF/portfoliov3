---
interface Props {
  viewAll?: string;
  name: string;
}

const { viewAll, name } = Astro.props;
---

<section>
  <div class="section-details">
    <h2>{name}</h2>
    {
      viewAll && (
        <a class="button outlined" href={viewAll}>
          View All
        </a>
      )
    }
  </div>
  <div class="cards-container">
    <slot />
  </div>
</section>

<style>
  section h2 {
    font-size: var(--text-xl);
  }

  section > .cards-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    justify-content: center;
    justify-items: center;
  }

  .section-details {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  a.button {
    max-width: 150px;
  }

  /* section :global(> *) {
  } */
</style>
