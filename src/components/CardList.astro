---
import button from '../styles/button.module.css';
interface Props {
  viewAll?: string;
  name: string;
}

const { viewAll, name } = Astro.props;
---

<section>
  <div class="section-details">
    <h2>{name}</h2>
    {
      viewAll && (
        <a
          class={`${button.button} ${button.outlined} ${button.border}`}
          href={viewAll}
          aria-label={`View all projects`}
        >
          View All
        </a>
      )
    }
  </div>
  <div class="cards-container">
    <slot />
  </div>
</section>

