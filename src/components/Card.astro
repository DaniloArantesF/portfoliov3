---
export interface Props {
  title: string;
  picture: string;
  subtitle?: string;
  href: string;
  date?: string | number;
  description?: string;
  tags: string[];
  live?: string;
  github?: string;
  sandbox?: string;
}

const {
  title,
  subtitle,
  href,
  picture,
  date,
  description,
  tags,
  live,
  github,
  sandbox,
} = Astro.props;
import tagsMap, { Tag } from '../projects/tags';
let tagData: Tag[] = [];

// If tags are supplied, get their title and url from tagsmap
if (tags) {
  tagData = tags.map((t) => {
    return t in tagsMap
      ? tagsMap[t as keyof typeof tagsMap]
      : { title: '', href: '' };
  });
}
---

<div class="card">
  <a href={href} target="_blank">
    <div class="picture">
      <img src={`/assets/${picture}`} />
    </div>
    <div class={`card-body ${description ? 'with-description' : ''}`}>
      <div class="body-title">
        <h4>{title}</h4>
        <span>{date}</span>
      </div>
      <span>{subtitle ?? ''}</span>
    </div>
  </a>
  <div class="description">{description && <p>{description}</p>}</div>
  <div class="card-footer">
    <div class={`tags`}>
      {
        tagData &&
          tagData.map(
            ({ title, href }) =>
              title && (
                <a target="_blank" href={href} class="tag">
                  {title}
                </a>
              ),
          )
      }
    </div>
    <div class="links">
      {
        live && (
          <a target="_blank" href={live}>
            Live
          </a>
        )
      }
      {
        github && (
          <a target="_blank" href={github}>
            Github
          </a>
        )
      }
      {
        sandbox && (
          <a target="_blank" href={sandbox}>
            Sandbox
          </a>
        )
      }
    </div>
  </div>
</div>

