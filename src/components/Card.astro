  }

  .picture {
    width: 100%;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--border-radius) var(--border-radius) 0 0;
    aspect-ratio: 4/3;
    overflow: hidden;
  }

  img {
    width: auto;
    height: 100%;
    object-fit: cover;
  }

  .card h4 {
    font-size: var(--text-md);
  }

  span {
    display: inline-block;
    font-size: var(--text-xs);
    font-weight: 400;
    color: var(--color-text-sub);
    letter-spacing: 2px;
    margin-bottom: 1rem;
  }

  p {
    font-weight: 400;
    font-size: var(--text-xs);
    opacity: 0.7;
    padding-bottom: 0.75rem;
    height: 100%;
    overflow: overlay;
  }

  p::-webkit-scrollbar {
    position: absolute;
    opacity: 0;
    width: 0em;
  }

  .card-footer {
    position: relative;
    height: fit-content;
  }

  .tags {
    display: inline-flex;
    width: 100%;
    height: fit-content;
    position: relative;
    gap: 0.5rem;
    flex-wrap: wrap;
    border-radius: 0 0 var(--border-radius) var(--border-radius);
    background: var(--color-surface-4);
    padding: 1rem;
    z-index: 1;

    &::before {
      content: '';
      border-top: 1px solid var(--color-accent-4);
      height: 0px;
      position: absolute;
      width: calc(100% - 2rem);
      left: 50%;
      top: 0;
      transform: translateX(-50%);
    }
  }

  .links {
    --anim-duration: 150ms;
    display: none;
    z-index: 2;
    opacity: 0;
    &::before {
      border-top: none;
    }
  }

  .card:hover,
  .card:active {
    & .tags a {
      opacity: 0;
    }
    & .links {
      position: absolute;
      width: 100%;
      height: 100%;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      display: inline-flex;
      align-items: center;
      justify-content: space-around;
      opacity: 1;
      overflow: hidden;

      & a {
        animation: go-up var(--anim-duration) forwards ease-out;
      }
    }
  }

  .links a {
    font-size: var(--text-xs);
    position: relative;
  }

  @keyframes go-up {
    0% {
      top: -100%;
      opacity: 0;
    }
    80% {
      opacity: 1;
    }
    100% {
      top: 0%;
    }
  }

  .tag {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    height: fit-content;
    font-size: 12px;
    background: var(--color-surface-4);
    color: var(--color-text-sub);
    padding: 0.25rem 0.5rem;
    border-radius: 0.5rem;
    text-transform: uppercase;
  }

