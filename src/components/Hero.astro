---
import button from '../styles/button.module.css';

export interface Props {
  heading: string;
  text: string;
}

const { heading, text } = Astro.props;
---

<div id="hero">
  <h1>{heading}</h1>
  <p>{text}</p>
  <a class={`${button.button}`} href={'/contact'}> Contact Me</a>
</div>

<style>
  #hero {
    position: relative;
    display: flex;
    align-items: center;
    flex-direction: column;
    /* screen - header */
    height: calc(100vh - 100px);
    padding: 5rem 0rem 3rem;
    gap: 1rem;
  }

  #hero:before {
    content: 'background shader wow';
    width: 50%;
    position: absolute;
    color: yellow;
    left: 10%;
    top: 0%;
    transform: translate(0, 50%) scale(1.3);
    rotate: 5deg;
  }

  #hero:after {
    content: 'much impress';
    position: absolute;
    color: red;
    right: 0;
    top: 70%;
    transform: translate(0, -50%) scale(1.3);
    rotate: -35deg;
  }

  h1 {
    font-size: var(--text-xl);
  }

  .buttons {
    margin-top: 2rem;
    width: 100%;
    display: grid;
    grid-template-columns: 1fr;
    justify-content: center;
    gap: 1rem;
  }

  @media only screen and (min-width: 600px) {
    .buttons {
      grid-template-columns: repeat(2, minmax(auto, 200px));
    }
  }
</style>
