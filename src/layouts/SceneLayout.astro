---
import { Analytics } from '@vercel/analytics/react';
import LoadingOverlay from 'src/components/LoadingOverlay.astro';
import Header from '../components/Header.astro';
import { PlayerController } from '../components/PlayerController';
import SceneInfo from '~/components/SceneInfo';
import '../globals.css';
import BaseHead from '~/components/BaseHead.astro';
import { getEntry } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

export interface Props {
  slug?: string;
  audio?: boolean;
}

const { slug, audio = false } = Astro.props;
let plainTextDescription = '',
  title = '';
let project: CollectionEntry<'projects'> | null = null;
if (slug) {
  project = (await getEntry('projects', slug ?? '')) ?? null;
}
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={plainTextDescription} />
  </head>
  <body>
    <Header stealth />
    <main id="container">
      <LoadingOverlay />
      <div id="gui_container"></div>
      <SceneInfo client:only="react" project={project?.data ?? null} />
      <canvas id="app-view"></canvas>
      {
        audio && (
          <div id="audioPlayer-container">
            <audio src="/assets/songs/song1.mp3" preload="" />
            <div class="controls">
              <PlayerController client:only="react" />
            </div>
          </div>
        )
      }
      <slot />
    </main>
    <Analytics client:only="react" />
    <style>
      *,
      *::before,
      *::after {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
      }

      html,
      body {
        width: 100%;
        height: 100vh;
        background: var(--color-background);
        overflow: hidden;
        overscroll-behavior: none;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
        height: -webkit-fill-available;
      }

      html {
        height: 100vh;
        width: 100vw;
        overflow: hidden;
      }

      :root {
        /* gui */
        --tp-base-background-color: var(--color-surface-3);
      }

      #app-view {
        display: block;
        width: 100%;
        height: 100%;
      }

      #container {
        position: relative;
        width: 100%;
        height: 100%;
      }

      #gui_container {
        position: absolute;
        top: var(--header-height);
        right: 1rem;
      }

      /* Audio controlls */
      #audioPlayer-container {
        display: inline-flex;
        flex-direction: column;
        position: absolute;
        bottom: 2rem;
        width: 100%;
        max-width: 400px;
        left: 50%;
        transform: translateX(-50%);
        row-gap: 1rem;
      }

      #play_btn {
        position: absolute;
        width: 2rem;
        height: 2rem;
        bottom: 3px;
        left: calc(50% - 125px);
        transform: translateX(-50%);
        background: transparent;
        border: none;
        z-index: 99;
        cursor: pointer;
      }

      .controls {
        position: relative;
        z-index: 99;
        display: flex;
        flex-direction: column;
        row-gap: 2rem;
        transform: scale(0.9);
      }
    </style>
  </body>
</html>
